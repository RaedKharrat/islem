{% extends 'back.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Product Details</h1>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>{{ produit.nom }}</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th scope="row">ID</th>
                                <td>{{ produit.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Name</th>
                                <td>{{ produit.nom }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Description</th>
                                <td>{{ produit.description }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Price</th>
                                <td>${{ produit.prix|number_format(2, '.', ',') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Image</th>
                                <td>
                                    {% if produit.image %}
                                        <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width: 150px;">
                                    {% else %}
                                        <span class="text-muted">No Image Available</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Rate</th>
                                <td>{{ produit.rate }}/5</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    {{ include('produit/_delete_form.html.twig', { 'attr': { 'class': 'btn btn-danger' } }) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
