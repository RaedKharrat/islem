{% extends 'back.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Category Details</h1>
            
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Details for: {{ categorie.nom }}</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 30%;">ID</th>
                                <td>{{ categorie.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Name</th>
                                <td>{{ categorie.nom }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                {{ include('categorie/_delete_form.html.twig', { 'attr': { 'class': 'd-inline' } }) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
