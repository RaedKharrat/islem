{% extends 'back.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">Category List</h1>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>All Categories</h4>
                </div>
                 <script>
    $(document).ready(function () {
        $('#search-input').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('table tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>

                <div class="d-flex justify-content-start mb-3">
    <input type="text" id="search-input" class="form-control" placeholder="Search Products">
</div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.nom }}</td>
                                <td>
                                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a href="{{ path('app_categorie_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
